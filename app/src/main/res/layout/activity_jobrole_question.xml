<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.EquipmentQuestion">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|center_horizontal"
            android:text="Jobrole : Medical Sales Representative"
            android:id="@+id/jobrole"
            android:textColor="#000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/jobrole">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/left"
                android:orientation="vertical"
                android:layout_margin="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="#ffffff"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:text="Mandatory Minimum Lab size (in Square Feet for batch of 30 students )"
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:textColor="#000"

                        android:layout_marginRight="5dp"
                        android:paddingRight="5dp"

                        />

                    <EditText
                        style="@style/Widget.AppCompat.EditText"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:lines="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:id="@+id/min_lab_size"
                        android:hint="e.g. 300" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cfcfcf"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="2dp"
                    android:background="#ffffff"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:text="Do you allow Hybrid arrangement (Lab + Classroom)
Yes/ No"
                        android:ellipsize="none"
                        android:maxLines="100"
                        android:scrollHorizontally="false"
                        android:textColor="#000"

                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:paddingRight="5dp"


                        />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:id="@+id/lab_cr"
                        android:paddingRight="10dp"></Spinner>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cfcfcf"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="2dp"
                    android:background="#ffffff"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:text=" Is there any Additional Training Area required (apart from Lab or Classroom )
If Yes, Give details"

                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:maxLines="100"
                        android:textColor="#000"

                        android:scrollHorizontally="false"
                        android:layout_marginRight="5dp"

                        android:paddingRight="5dp"

                        />

                    <EditText
                        android:id="@+id/training_area_required"

                        style="@style/Widget.AppCompat.EditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@android:drawable/editbox_background_normal"
                        android:hint="Enter Details"
                        android:paddingLeft="15dp"


                        android:paddingRight="10dp"
                        android:textSize="16dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cfcfcf"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="2dp"
                    android:background="#ffffff"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:text="Is requirement of Addtl. Training Area is mandatory
If Yes, TC would be rejected in case of non-compliance"
                        android:textColor="#000"

                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:layout_marginRight="5dp"
                        android:paddingRight="5dp"


                        />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:id="@+id/requirement_of_addtl"
                        android:paddingRight="10dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cfcfcf"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="2dp"
                    android:background="#ffffff"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:text=" Minimum Carpet Area of additional Training Area in sq ft"

                        android:textSize="18dp"
                        android:textColor="#000"

                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:paddingRight="5dp"


                        />

                    <EditText
                        style="@style/Widget.AppCompat.EditText"

                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"
                        android:background="@android:drawable/editbox_background_normal"

                        android:lines="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:layout_weight="1"


                        android:hint="e.g. 80"
                        android:inputType="number"
                        android:id="@+id/carpet_area" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cfcfcf"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="2dp"
                    android:background="#ffffff"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:text="Can the lab for this Job Role be treated as IT Lab (IT lab implies the lab for Live or Soft Skills)"
                        android:textColor="#000"

                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:paddingRight="5dp"


                        />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:id="@+id/it_lab"
                        android:paddingRight="10dp"></Spinner>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/id_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_submit_jobrole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#07A559"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>