<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/Pagecolor"    android:orientation="vertical">    <RelativeLayout        android:id="@+id/withoutData"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:visibility="gone">        <TextView            android:id="@+id/noDataFound"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:gravity="center"            android:text="No data found" />    </RelativeLayout>    <RelativeLayout        android:id="@+id/withData"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:visibility="visible">        <RelativeLayout            android:id="@+id/toolbar1"            android:layout_width="match_parent"            android:layout_height="?attr/actionBarSize"            android:background="@color/colorPrimary">            <RelativeLayout                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:layout_centerVertical="true">                <TextView                    android:id="@+id/timer"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentEnd="true"                    android:layout_alignParentRight="true"                    android:layout_centerVertical="true"                    android:layout_marginRight="10dp"                    android:text="Time Left : 89"                    android:textColor="@android:color/holo_red_dark"                    android:textSize="20dp"                    android:visibility="gone" />            </RelativeLayout>            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginLeft="10dp"                android:text="Inspection"                android:textColor="@color/white"                android:textSize="16dp"                android:textStyle="bold" />        </RelativeLayout>        <LinearLayout            android:id="@+id/question_category"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@+id/toolbar1"            android:background="#e9ffffff"            android:orientation="horizontal">            <TextView                android:id="@+id/q_category"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="center"                android:paddingTop="8dp"                android:paddingBottom="8dp"                android:text="Category"                android:textColor="#044c93"                android:textSize="20dp"                android:textStyle="bold" />        </LinearLayout>        <ScrollView            android:id="@+id/mainLayout"            android:layout_width="match_parent"            android:layout_height="450dp"            android:layout_below="@+id/question_category"            android:layout_marginTop="6dp"            android:scrollbars="vertical">            <RelativeLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:padding="15dp">                <RelativeLayout                    android:id="@+id/ques_layout"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content">                    <TextView                        android:id="@+id/txt_ques"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_margin="5dp"                        android:padding="1dp"                        android:text="Q1) Who Present in IT team?"                        android:textColor="#000000"                        android:textSize="23dp"                        android:textStyle="bold" />                    <TextView                        android:id="@+id/txt_desc"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_below="@id/txt_ques"                        android:layout_marginLeft="10dp"                        android:lineSpacingExtra="5dp"                        android:padding="1dp"                        android:text="Description"                        android:textColor="#000000"                        android:textSize="20dp"                        android:textStyle="italic" />                </RelativeLayout>                android:lineSpacingMultiplier=""                <RelativeLayout                    android:id="@+id/options"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@+id/ques_layout">                    <RelativeLayout                        android:id="@+id/mcq_ralative_layout"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:visibility="visible">                        <RadioGroup                            android:id="@+id/myRadioGroup"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="15dp">                            <RadioButton                                android:id="@+id/rd_choice1"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:checked="false"                                android:lineSpacingExtra="5dp"                                android:padding="5dp"                                android:textSize="20dp" />                            <RadioButton                                android:id="@+id/rd_choice2"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:checked="false"                                android:lineSpacingExtra="5dp"                                android:padding="5dp"                                android:textSize="20dp" />                            <RadioButton                                android:id="@+id/rd_choice3"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:checked="false"                                android:lineSpacingExtra="5dp"                                android:padding="5dp"                                android:textSize="20dp" />                            <RadioButton                                android:id="@+id/rd_choice4"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:checked="false"                                android:lineSpacingExtra="5dp"                                android:padding="5dp"                                android:textSize="20dp" />                            <RadioButton                                android:id="@+id/rd_choice5"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:checked="false"                                android:padding="5dp"                                android:text="N/A"                                android:textSize="20dp"                                android:visibility="gone" />                        </RadioGroup>                    </RelativeLayout>                    <RelativeLayout                        android:id="@+id/true_false"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:visibility="gone">                        <RadioGroup                            android:id="@+id/correct_group"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="15dp"                            android:orientation="vertical">                            <RadioButton                                android:id="@+id/_true"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:checked="false"                                android:lineSpacingExtra="5dp"                                android:padding="5dp"                                android:textSize="20dp" />                            <RadioButton                                android:id="@+id/_false"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:checked="false"                                android:lineSpacingExtra="5dp"                                android:padding="5dp"                                android:textSize="20dp" />                            <RadioButton                                android:id="@+id/_na"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:checked="false"                                android:padding="5dp"                                android:text="N/A"                                android:textSize="20dp"                                android:visibility="gone" />                        </RadioGroup>                    </RelativeLayout>                    <RelativeLayout                        android:id="@+id/remarks"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:visibility="gone">                        <EditText                            android:id="@+id/comment_text"                            style="@style/Widget.AppCompat.EditText"                            android:layout_width="match_parent"                            android:layout_height="100dp"                            android:layout_centerInParent="true"                            android:layout_margin="4dp"                            android:background="@android:drawable/editbox_background_normal"                            android:hint="Enter the Answer"                            android:inputType="textMultiLine"                            android:lines="10"                            android:visibility="visible">                            <requestFocus />                        </EditText>                    </RelativeLayout>                    <RelativeLayout                        android:id="@+id/multiselect"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:visibility="gone">                        <android.support.v7.widget.RecyclerView                            android:id="@+id/checklist_answers"                            android:layout_width="match_parent"                            android:layout_height="220dp"></android.support.v7.widget.RecyclerView>                    </RelativeLayout>                </RelativeLayout>                <RelativeLayout                    android:id="@+id/tmpremark"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@+id/options"                    android:visibility="visible">                    <EditText                        android:id="@+id/remarktext"                        style="@style/Widget.AppCompat.EditText"                        android:layout_width="match_parent"                        android:layout_height="50dp"                        android:layout_centerInParent="true"                        android:layout_margin="4dp"                        android:background="@android:drawable/editbox_background_normal"                        android:hint="Enter Remaks Here"                        android:inputType="textMultiLine"                        android:lines="10"                        android:visibility="visible"></EditText>                </RelativeLayout>                <LinearLayout                    android:id="@+id/radioPicture"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@+id/tmpremark"                    android:orientation="horizontal">                    <LinearLayout                        android:id="@+id/rgPicture"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="horizontal">                        <CheckBox                            android:id="@+id/photocopycollected"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="Photocopy collected" />                        <CheckBox                            android:id="@+id/originalsSeen"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="Originals Seen" />                        <CheckBox                            android:id="@+id/notavailable"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="N/A" />                    </LinearLayout>                </LinearLayout>                <RelativeLayout                    android:id="@+id/imageClick"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@+id/radioPicture"                    android:layout_marginLeft="3dp"                    android:visibility="visible">                    <ImageView                        android:id="@+id/imageView"                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_alignParentRight="true"                        android:layout_margin="4dp"                        android:background="@drawable/camera"                        android:contentDescription="click to capture"                        android:visibility="visible" />                    <ImageView                        android:id="@+id/addImage"                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_centerVertical="true"                        android:layout_margin="4dp"                        android:visibility="visible" />                    <ImageView                        android:id="@+id/imageView1"                        android:layout_toRightOf="@id/addImage"                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_centerVertical="true"                        android:layout_margin="4dp"                        android:visibility="visible" />                    <ImageView                        android:id="@+id/imageView2"                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_centerVertical="true"                        android:layout_margin="4dp"                        android:layout_toRightOf="@+id/imageView1"                        android:gravity="center"                        android:visibility="visible" />                    <ImageView                        android:id="@+id/imageView3"                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_centerVertical="true"                        android:layout_margin="4dp"                        android:layout_toRightOf="@+id/imageView2"                        android:gravity="center"                        android:visibility="visible" />                    <ImageView                        android:id="@+id/imageView4"                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_margin="4dp"                        android:layout_toRightOf="@+id/imageView3"                        android:gravity="center"                        android:visibility="visible" />                    <ImageView                        android:id="@+id/imageView5"                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_centerVertical="true"                        android:layout_margin="4dp"                        android:layout_toRightOf="@+id/imageView4"                        android:gravity="center"                        android:visibility="visible" />                </RelativeLayout>                <LinearLayout                    android:id="@+id/id_layout3"                    android:layout_width="match_parent"                    android:layout_height="50dp"                    android:layout_below="@+id/imageClick"                    android:layout_marginTop="5dp"                    android:background="@color/white"                    android:gravity="center"                    android:orientation="horizontal">                    <Button                        android:id="@+id/btn_back"                        android:layout_width="wrap_content"                        android:layout_height="35dp"                        android:layout_gravity="center"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="#07A559"                        android:padding="5dp"                        android:text="Previous"                        android:textAllCaps="false"                        android:textColor="@color/white"                        android:textSize="20dp" />                    <Button                        android:id="@+id/btn_next"                        android:layout_width="wrap_content"                        android:layout_height="35dp"                        android:layout_gravity="center"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="#07A559"                        android:gravity="center"                        android:padding="5dp"                        android:text="Next"                        android:textAllCaps="false"                        android:textColor="@color/white"                        android:textSize="20dp" />                    <Button                        android:id="@+id/btn_submit"                        android:layout_width="wrap_content"                        android:layout_height="35dp"                        android:layout_gravity="center"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="@android:color/holo_red_dark"                        android:gravity="center"                        android:padding="5dp"                        android:text="Submit"                        android:textAllCaps="false"                        android:textColor="@color/white"                        android:textSize="20dp"                        android:visibility="gone" />                </LinearLayout>            </RelativeLayout>        </ScrollView>        <TextView            android:id="@+id/txt_q"            android:layout_width="match_parent"            android:layout_height="20dp"            android:layout_below="@+id/mainLayout"            android:layout_margin="1dp"            android:gravity="left"            android:paddingLeft="15dp"            android:text="Total Questions :"            android:textColor="#4c4c4c"            android:textSize="16dp"            android:visibility="visible" />        <android.support.v7.widget.RecyclerView            android:id="@+id/rv_questions"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@+id/txt_q"            android:clipToPadding="false"            android:paddingLeft="15dp"            android:paddingRight="10dp"            android:scrollbars="vertical" />    </RelativeLayout></RelativeLayout>