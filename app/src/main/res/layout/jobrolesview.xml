<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp">

    <RelativeLayout
        android:id="@+id/candidate_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="1dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/mytripml2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mytripml1"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:id="@+id/industry_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Industry"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/industry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/company_linear"
                        android:layout_weight=".5"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        tools:text="" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_below="@+id/industry_linear"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dedcdc"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/jobRolest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_below="@+id/line1"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Job Role"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_job_roles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/company_linear"
                        android:layout_weight=".5"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        tools:text="" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_below="@+id/jobRolest"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dedcdc"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"></LinearLayout>


                <LinearLayout
                    android:id="@+id/auditcenter_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line2"
                    android:padding="2dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/p_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Audit Center"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        tools:text="Yashaswi Pharma Skill Development Center" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/line3"
                    android:layout_below="@+id/auditcenter_linear"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dedcdc"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"></LinearLayout>



                <LinearLayout
                    android:id="@+id/address_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/auditcenter_linear"
                    android:visibility="gone"
                    android:padding="4dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Address"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        tools:text="Gurgaon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/auditname_linear"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address_linear"
                    android:padding="4dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Audit Name"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/audit_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        tools:text="Yashaswi Inspection" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/auditid_linear"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/auditname_linear"
                    android:padding="4dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Audit Id"
                        android:textColor="#000000"

                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/audit_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        tools:text="Praveenkumar1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/auditor_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/auditid_linear"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Auditor Name"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/auditor_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        tools:text="Praveen Kumar" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/auditdate_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/auditor_linear"
                    android:padding="2dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Audit Date"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/audit_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        tools:text="29-11-2018" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line4"
                    android:layout_below="@+id/auditdate_linear"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dedcdc"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"></LinearLayout>


                <Button
                    android:id="@+id/btn_attempt"
                    android:layout_width="90dp"
                    android:layout_height="37dp"
                    android:layout_below="@+id/auditdate_linear"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/attempt_selector"
                    android:gravity="center"
                    android:text="Start"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>