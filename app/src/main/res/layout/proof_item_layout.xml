<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




        <RelativeLayout
            android:id="@+id/ques_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_ques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="1dp"
                android:text="Q1) Who Present in IT team?"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_ques_no"
                android:layout_width="wrap_content"
                android:layout_below="@+id/txt_ques"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="1dp"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="normal" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imageRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ques_layout"
            android:layout_marginLeft="3dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/addClickImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                android:background="@drawable/camera"
                android:contentDescription="click to capture"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/imageView1"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"

                android:layout_toRightOf="@+id/imageView2"

                android:gravity="center"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:layout_toRightOf="@+id/imageView3"
                android:gravity="center"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_toRightOf="@+id/imageView4"
                android:gravity="center"
                android:visibility="visible" />

        </RelativeLayout>







</RelativeLayout>